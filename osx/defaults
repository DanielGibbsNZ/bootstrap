##########

# Disable the all-too-sensitive backswipe.
defaults write com.google.Chrome AppleEnableSwipeNavigateWithScrolls -bool false

# Use the system-native print preview dialog.
defaults write com.google.Chrome DisablePrintPreview -bool true

########
# MAIL #
########

# Disable send and reply animations in Mail.
defaults write com.apple.mail DisableReplyAnimations -bool true
defaults write com.apple.mail DisableSendAnimations -bool true

# Add the leopard shortcut Cmd+Enter to send an email in Mail.
defaults write com.apple.mail NSUserKeyEquivalents -dict-add "Send" -string "@\\U21a9"

# Display emails in threaded mode, sorted by date (oldest at the top).
defaults write com.apple.mail DraftsViewerAttributes -dict-add "DisplayInThreadedMode" -string "yes"
defaults write com.apple.mail DraftsViewerAttributes -dict-add "SortedDescending" -string "yes"
defaults write com.apple.mail DraftsViewerAttributes -dict-add "SortOrder" -string "received-date"

# Disable automatic spell checking
defaults write com.apple.mail SpellCheckingBehavior -string "NoSpellCheckingEnabled"

# Disable inline attachments (just show the icons).
defaults write com.apple.mail DisableInlineAttachmentViewing -bool true

############
# CONTACTS #
############

# Set address format to New Zealand.
defaults write com.apple.AddressBook ABDefaultAddressCountryCode -string "nz"

# Display names as "First Name, Last Name".
defaults write com.apple.AddressBook ABNameDisplay -int 1

# Sort by first name, last name.
defaults write com.apple.AddressBook ABNameSortingFormat -string "sortingFirstName sortingLastName"

# Enable the debug menu in Address Book.
defaults write com.apple.AddressBook ABShowDebugMenu -bool true

# Display nickname and birthday in Address Book.
defaults write com.apple.AddressBook ABNicknameVisible -int 1
defaults write com.apple.AddressBook ABBirthDayVisible -int 1

############
# CALENDAR #
############

# Show 7 days in Calendar.
defaults write com.apple.iCal "n days of week" -int 7

# Week starts on Monday in Calendar.
defaults write com.apple.iCal "first day of week" -int 1

# Show the whole day in Calendar, with work hours from 7am to 9pm.
defaults write com.apple.iCal "first minute of day time range" -int 0
defaults write com.apple.iCal "last minute of day time range" -int 1440
defaults write com.apple.iCal "first minute of work hours" -int 420
defaults write com.apple.iCal "last minute of work hours" -int 1260

############
# TEXTEDIT #
############

# Use plain text mode for new TextEdit documents.
defaults write com.apple.TextEdit RichText -int 0

# Open and save files as UTF-8 in TextEdit.
defaults write com.apple.TextEdit PlainTextEncoding -int 4
defaults write com.apple.TextEdit PlainTextEncodingForWrite -int 4

############
# TERMINAL #
############

# Only use UTF-8 in Terminal.
defaults write com.apple.terminal StringEncodings -array 4

# Create new terminal profile named "Pro 2.0" if there isn't one, and use this by default.
pathToTerminalPrefs="${HOME}/Library/Preferences/com.apple.Terminal.plist"
if ! /usr/libexec/PlistBuddy -c "Print :Window\ Settings:Pro\ 2.0" "${pathToTerminalPrefs}" &>/dev/null; then
	/usr/libexec/PlistBuddy -c "Copy :Window\ Settings:Pro :Window\ Settings:Pro\ 2.0" "${pathToTerminalPrefs}"
	/usr/libexec/PlistBuddy -c "Set :Window\ Settings:Pro\ 2.0:name Pro\ 2.0" "${pathToTerminalPrefs}"
	/usr/libexec/PlistBuddy -c "Set :Window\ Settings:Pro\ 2.0:shellExitAction 1" "${pathToTerminalPrefs}"
	/usr/libexec/PlistBuddy -c "Add :Window\ Settings:Pro\ 2.0:UseBoldFonts integer 0" "${pathToTerminalPrefs}"
	/usr/libexec/PlistBuddy -c "Add :Window\ Settings:Pro\ 2.0:UseBrightBold integer 1" "${pathToTerminalPrefs}"
	/usr/libexec/PlistBuddy -c "Add :Window\ Settings:Pro\ 2.0:Bell integer 0" "${pathToTerminalPrefs}"
	/usr/libexec/PlistBuddy -c "Add :Window\ Settings:Pro\ 2.0:VisualBell integer 0" "${pathToTerminalPrefs}"
	/usr/libexec/PlistBuddy -c "Add :Window\ Settings:Pro\ 2.0:ShowTTYNameInTitle integer 1" "${pathToTerminalPrefs}"
	/usr/libexec/PlistBuddy -c "Set :Window\ Settings:Pro\ 2.0:ShowWindowSettingsNameInTitle 0" "${pathToTerminalPrefs}"
	/usr/libexec/PlistBuddy -c "Add :Window\ Settings:Pro\ 2.0:useOptionAsMetaKey integer 1" "${pathToTerminalPrefs}"
	/usr/libexec/PlistBuddy -c "Add :Window\ Settings:Pro\ 2.0:columnCount integer 128" "${pathToTerminalPrefs}"
	/usr/libexec/PlistBuddy -c "Add :Window\ Settings:Pro\ 2.0:rowCount integer 32" "${pathToTerminalPrefs}"
	/usr/libexec/PlistBuddy -c "Set :Window\ Settings:Pro\ 2.0:FontAntialias 1" "${pathToTerminalPrefs}"
	/usr/libexec/PlistBuddy -c "Add :Window\ Settings:Pro\ 2.0:Linewrap integer 1" "${pathToTerminalPrefs}"
	/usr/libexec/PlistBuddy -c "Set :Window\ Settings:Pro\ 2.0:BackgroundBlur 0.05" "${pathToTerminalPrefs}"
	echo -e "Terminal profile \033[36;1mPro 2.0\033[0m installed. Remember to adjust the font and font size."
fi
defaults write com.apple.Terminal "Startup Window Settings" -string "Pro 2.0"
defaults write com.apple.Terminal "Default Window Settings" -string "Pro 2.0"

# New tabs open with home as the working directory.
defaults write com.apple.Terminal NewTabWorkingDirectoryBehavior -int 1

#########
# XCODE #
#########

# Always use tabs for indenting in XCode.
defaults write com.apple.dt.Xcode DVTTextIndentUsingTabs -bool true

# Show tab bar in XCode.
defaults write com.apple.dt.Xcode AlwaysShowTabBar -bool true

#####################
## ACTIVITY MONITOR #
#####################

# Show the main window when launching Activity Monitor.
defaults write com.apple.ActivityMonitor OpenMainWindow -bool true

# Visualize CPU usage in the Activity Monitor Dock icon.
defaults write com.apple.ActivityMonitor IconType -int 5

# Show all processes in Activity Monitor.
defaults write com.apple.ActivityMonitor ShowCategory -int 0

# Sort Activity Monitor results by CPU usage.
defaults write com.apple.ActivityMonitor SortColumn -string "CPUUsage"
defaults write com.apple.ActivityMonitor SortDirection -int 0

################
# DISK UTILITY #
################

# Enable the debug menu in Disk Utility.
defaults write com.apple.DiskUtility DUDebugMenuEnabled -bool true
defaults write com.apple.DiskUtility advanced-image-options -bool true
